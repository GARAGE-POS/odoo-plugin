{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Odoo (Normal)",
            "type": "shell",
            "command": "/mnt/extra-addons/.devcontainer/start-odoo.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "Start Odoo (Debug)",
            "type": "shell",
            "command": "/mnt/extra-addons/.devcontainer/start-odoo-debug.sh",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*)$",
                    "file": 1,
                    "message": 1
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Starting Odoo with debugpy on port 5678",
                    "endsPattern": "You can attach your debugger to localhost:5678 after Odoo starts"
                }
            },
            "isBackground": true
        },
        {
            "label": "Update Karage Module",
            "type": "shell",
            "command": "odoo --addons-path=/mnt/extra-addons --update=karage-pos --stop-after-init",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Karage Module",
            "type": "shell",
            "command": "odoo --addons-path=/mnt/extra-addons --init=karage-pos --stop-after-init",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "View Odoo Logs",
            "type": "shell",
            "command": "tail -f /var/log/odoo/odoo.log",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}
