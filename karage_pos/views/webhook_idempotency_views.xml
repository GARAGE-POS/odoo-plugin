<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_webhook_idempotency_list" model="ir.ui.view">
        <field name="name">karage.pos.webhook.idempotency.list</field>
        <field name="model">karage.pos.webhook.idempotency</field>
        <field name="arch" type="xml">
            <tree string="Webhook Idempotency Records" decoration-success="status == 'completed'" decoration-danger="status == 'failed'" decoration-warning="status == 'processing'">
                <field name="idempotency_key"/>
                <field name="order_id"/>
                <field name="pos_order_id"/>
                <field name="status"/>
                <field name="processed_at"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_webhook_idempotency_form" model="ir.ui.view">
        <field name="name">karage.pos.webhook.idempotency.form</field>
        <field name="model">karage.pos.webhook.idempotency</field>
        <field name="arch" type="xml">
            <form string="Webhook Idempotency Record">
                <sheet>
                    <group>
                        <group>
                            <field name="idempotency_key" readonly="1"/>
                            <field name="order_id"/>
                            <field name="status" readonly="1"/>
                        </group>
                        <group>
                            <field name="pos_order_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                            <field name="processed_at" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="response_data" readonly="1" nolabel="1" widget="text"/>
                    </group>
                    <group>
                        <field name="error_message" readonly="1" nolabel="1" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_webhook_idempotency" model="ir.actions.act_window">
        <field name="name">Webhook Idempotency</field>
        <field name="res_model">karage.pos.webhook.idempotency</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No idempotency records yet
            </p>
            <p>
                Idempotency records track processed webhook requests to prevent duplicates.
            </p>
        </field>
    </record>

    <menuitem id="menu_webhook_idempotency"
              name="Webhook Idempotency"
              parent="point_of_sale.menu_point_ofsale"
              action="action_webhook_idempotency"
              sequence="101"/>
</odoo>

