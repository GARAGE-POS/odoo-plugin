<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="karage_pos_payment_mapping_view_tree" model="ir.ui.view">
        <field name="name">karage.pos.payment.mapping.tree</field>
        <field name="model">karage.pos.payment.mapping</field>
        <field name="arch" type="xml">
            <list string="Payment Mappings" editable="bottom">
                <field name="payment_type"/>
                <field name="custom_code" invisible="payment_type != 'custom'"/>
                <field name="external_code" optional="hide"/>
                <field name="name"/>
                <field name="payment_method_id"/>
                <field name="active" column_invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="karage_pos_payment_mapping_view_form" model="ir.ui.view">
        <field name="name">karage.pos.payment.mapping.form</field>
        <field name="model">karage.pos.payment.mapping</field>
        <field name="arch" type="xml">
            <form string="Payment Mapping">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <field name="active" widget="boolean_toggle"/>
                    </div>
                    <group>
                        <group string="External Payment">
                            <field name="payment_type"/>
                            <field name="custom_code" invisible="payment_type != 'custom'"/>
                            <field name="external_code" readonly="1" invisible="payment_type != 'custom'"/>
                            <field name="name"/>
                        </group>
                        <group string="Odoo Payment">
                            <field name="payment_method_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="karage_pos_payment_mapping_view_search" model="ir.ui.view">
        <field name="name">karage.pos.payment.mapping.search</field>
        <field name="model">karage.pos.payment.mapping</field>
        <field name="arch" type="xml">
            <search string="Payment Mappings">
                <field name="external_code"/>
                <field name="name"/>
                <field name="payment_method_id"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="karage_pos_payment_mapping_action" model="ir.actions.act_window">
        <field name="name">Payment Mappings</field>
        <field name="res_model">karage.pos.payment.mapping</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'active_test': False}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first payment mapping
            </p>
            <p>
                Map external payment codes from your POS system to Odoo payment methods.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem
        id="karage_pos_payment_mapping_menu"
        name="Payment Mappings"
        parent="menu_karage_pos_root"
        action="karage_pos_payment_mapping_action"
        sequence="20"/>
</odoo>
