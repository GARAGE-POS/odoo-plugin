<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_karage_pos_config_form" model="ir.ui.view">
        <field name="name">karage.pos.config.form</field>
        <field name="model">karage.pos.config</field>
        <field name="arch" type="xml">
            <form string="Karage POS Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="odoo_url" placeholder="https://odoo.example.com"/>
                            <field name="webhook_endpoint"/>
                        </group>
                    </group>
                    <group>
                        <field name="api_key" password="True" placeholder="Enter your API key"/>
                    </group>
                    <div class="alert alert-info" role="alert">
                        <p><strong>API Key Configuration:</strong></p>
                        <p>This API key will be used to authenticate webhooks sent to Odoo.</p>
                        <p>When sending webhooks, include this key in the <code>X-API-KEY</code> header.</p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_karage_pos_config_list" model="ir.ui.view">
        <field name="name">karage.pos.config.list</field>
        <field name="model">karage.pos.config</field>
        <field name="arch" type="xml">
            <list string="Karage POS Configurations">
                <field name="name"/>
                <field name="active"/>
                <field name="odoo_url"/>
                <field name="api_key" password="True"/>
            </list>
        </field>
    </record>

    <record id="action_karage_pos_config" model="ir.actions.act_window">
        <field name="name">Karage POS Configuration</field>
        <field name="res_model">karage.pos.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first configuration
            </p>
            <p>
                Configure the API key and Odoo URL for webhook authentication.
            </p>
        </field>
    </record>

    <menuitem id="menu_karage_pos_config"
              name="Karage POS Configuration"
              parent="point_of_sale.menu_point_ofsale"
              action="action_karage_pos_config"
              sequence="100"/>
</odoo>

