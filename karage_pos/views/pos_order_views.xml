<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to view Karage POS Orders -->
    <record id="action_karage_pos_orders" model="ir.actions.act_window">
        <field name="name">Karage POS Orders</field>
        <field name="res_model">pos.order</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="domain">[('note', 'ilike', 'External Order ID:')]</field>
        <field name="context">{'search_default_group_by_date': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No Karage orders found
            </p>
            <p>
                Orders created via Karage webhook will appear here.
            </p>
        </field>
    </record>

    <!-- Menu item for Karage POS Orders -->
    <menuitem id="menu_karage_pos_orders"
              name="Karage Orders"
              parent="point_of_sale.menu_point_of_sale"
              action="action_karage_pos_orders"
              sequence="50"
              groups="point_of_sale.group_pos_manager,point_of_sale.group_pos_user"/>

    <!-- Search view extension to add filter for Karage orders -->
    <record id="view_pos_order_search_karage" model="ir.ui.view">
        <field name="name">pos.order.search.karage</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Karage Orders" name="karage_orders" 
                        domain="[('note', 'ilike', 'External Order ID:')]"/>
            </xpath>
        </field>
    </record>
</odoo>

