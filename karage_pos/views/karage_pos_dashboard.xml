<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Filtered action for Karage POS Sessions -->
    <record id="action_karage_pos_session_filtered" model="ir.actions.act_window">
        <field name="name">Sessions</field>
        <field name="res_model">pos.session</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'search_default_config_id': [active_id],
            'default_config_id': active_id}
        </field>
    </record>

    <!-- Filtered action for Karage POS Orders -->
    <record id="action_karage_pos_order_filtered" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">pos.order</field>
        <field name="view_mode">list,form</field>
        <field name="context">{
            'search_default_config_id': [active_id],
            'default_config_id': active_id}
        </field>
    </record>

    <!-- Filtered action for Karage POS Orders Analysis -->
    <record id="action_karage_pos_report_order_filtered" model="ir.actions.act_window">
        <field name="name">Orders Analysis</field>
        <field name="res_model">report.pos.order</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{
            'search_default_config_id': [active_id],
            'default_config_id': active_id}
        </field>
    </record>

    <!-- Karage POS Simplified Settings Form View -->
    <record id="view_karage_pos_config_settings_form" model="ir.ui.view">
        <field name="name">karage.pos.config.settings.form</field>
        <field name="model">pos.config</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="POS Settings">
                <sheet>
                    <!-- Hidden field required for picking_type_id domain validation -->
                    <field name="company_id" invisible="1"/>
                    <group>
                        <group string="Payment">
                            <field name="payment_method_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Accounting">
                            <field name="journal_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="invoice_journal_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    <group>
                        <group string="Inventory">
                            <field name="picking_type_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" class="btn-primary" special="save"/>
                    <button string="Discard" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for Karage POS Settings -->
    <record id="action_karage_pos_settings" model="ir.actions.act_window">
        <field name="name">POS Settings</field>
        <field name="res_model">pos.config</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_karage_pos_config_settings_form"/>
        <field name="target">new</field>
    </record>

    <!-- Karage POS Dashboard Kanban View -->
    <record id="view_karage_pos_config_kanban" model="ir.ui.view">
        <field name="name">karage.pos.config.kanban.view</field>
        <field name="model">pos.config</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <kanban create="true" delete="true" class="o_kanban_dashboard o_pos_kanban">
                <field name="name"/>
                <field name="current_session_id"/>
                <field name="current_session_state"/>
                <field name="pos_session_username"/>
                <field name="is_karage_default_pos"/>
                <!-- Accounting & Inventory Settings -->
                <field name="journal_id"/>
                <field name="invoice_journal_id"/>
                <field name="picking_type_id"/>
                <field name="payment_method_ids"/>
                <templates>
                    <t t-name="kanban-box">
                        <div>
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <t t-esc="record.name.value"/>
                                        <span t-if="record.is_karage_default_pos.raw_value" class="badge text-bg-info ms-2">Default</span>
                                    </div>
                                    <div class="o_secondary">
                                        <t t-if="record.pos_session_username.value">
                                            <t t-esc="record.pos_session_username.value"/>
                                        </t>
                                        <t t-else="">Unused</t>
                                    </div>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v"/></a>
                                </div>
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6 o_kanban_primary_left">
                                        <!-- Session Status (read-only, automatic sessions) -->
                                        <div t-if="record.current_session_state.raw_value === 'opened'" class="badge text-bg-success fs-6">
                                            <i class="fa fa-check-circle me-1"/>Session Active
                                        </div>
                                        <div t-elif="record.current_session_state.raw_value === 'opening_control'" class="badge text-bg-warning fs-6">
                                            <i class="fa fa-clock-o me-1"/>Opening...
                                        </div>
                                        <div t-elif="record.current_session_state.raw_value === 'closing_control'" class="badge text-bg-info fs-6">
                                            <i class="fa fa-clock-o me-1"/>Closing...
                                        </div>
                                        <div t-else="" class="badge text-bg-secondary fs-6">
                                            <i class="fa fa-pause-circle me-1"/>No Active Session
                                        </div>
                                        <div class="text-muted mt-2 small">
                                            <i class="fa fa-info-circle me-1"/>Sessions are managed automatically
                                        </div>
                                    </div>
                                    <div class="col-6 o_kanban_primary_right">
                                        <!-- Accounting Settings -->
                                        <div class="mb-2">
                                            <div class="fw-bold text-muted small mb-1">
                                                <i class="fa fa-book me-1"/>Accounting
                                            </div>
                                            <div class="small">
                                                <span class="text-muted">Sales Journal: </span>
                                                <span t-if="record.journal_id.value" t-esc="record.journal_id.value"/>
                                                <span t-else="" class="text-danger">Not configured</span>
                                            </div>
                                            <div class="small">
                                                <span class="text-muted">Invoice Journal: </span>
                                                <span t-if="record.invoice_journal_id.value" t-esc="record.invoice_journal_id.value"/>
                                                <span t-else="" class="text-warning">Not configured</span>
                                            </div>
                                        </div>

                                        <!-- Inventory Settings -->
                                        <div class="mb-2">
                                            <div class="fw-bold text-muted small mb-1">
                                                <i class="fa fa-cubes me-1"/>Inventory
                                            </div>
                                            <div class="small">
                                                <span class="text-muted">Operation Type: </span>
                                                <span t-if="record.picking_type_id.value" t-esc="record.picking_type_id.value"/>
                                                <span t-else="" class="text-danger">Not configured</span>
                                            </div>
                                        </div>

                                        <!-- Payment Methods -->
                                        <div>
                                            <div class="fw-bold text-muted small mb-1">
                                                <i class="fa fa-credit-card me-1"/>Payment Methods
                                            </div>
                                            <div class="small">
                                                <span t-if="record.payment_method_ids.raw_value.length > 0" t-esc="record.payment_method_ids.value"/>
                                                <span t-else="" class="text-danger">No payment methods</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="container o_kanban_card_manage_pane dropdown-menu" role="menu">
                                <div class="row">
                                    <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                        <div class="o_kanban_card_manage_title">
                                            <span>View</span>
                                        </div>
                                        <div>
                                            <a name="%(action_karage_pos_session_filtered)d" type="action">Sessions</a>
                                        </div>
                                        <div>
                                            <a name="%(action_karage_pos_order_filtered)d" type="action">Orders</a>
                                        </div>
                                    </div>
                                    <div class="col-6 o_kanban_card_manage_section o_kanban_manage_new">
                                        <div class="o_kanban_card_manage_title">
                                            <span>Reporting</span>
                                        </div>
                                        <div>
                                            <a name="%(action_karage_pos_report_order_filtered)d" type="action">Orders Analysis</a>
                                        </div>
                                    </div>
                                </div>

                                <div class="o_kanban_card_manage_settings row">
                                    <div class="col-12">
                                        <a name="action_open_karage_settings" type="object">Quick Settings</a>
                                    </div>
                                    <div class="col-12">
                                        <a name="action_edit_karage_pos" type="object">Edit Full Configuration</a>
                                    </div>
                                    <div class="col-12" t-if="!record.is_karage_default_pos.raw_value">
                                        <a type="delete" class="text-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form view for creating/editing Karage POS -->
    <record id="view_karage_pos_config_form" model="ir.ui.view">
        <field name="name">karage.pos.config.form</field>
        <field name="model">pos.config</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Karage POS Configuration">
                <sheet>
                    <!-- Hidden field required for picking_type_id domain -->
                    <field name="company_id" invisible="1"/>
                    <div class="oe_title">
                        <label for="name" string="POS Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., KARAGE - Branch Name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Information">
                            <field name="is_karage_default_pos" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Payment Methods" name="payment_methods">
                            <field name="payment_method_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Accounting" name="accounting">
                            <group>
                                <group>
                                    <field name="journal_id" options="{'no_create': True, 'no_open': True}" required="1"/>
                                    <field name="invoice_journal_id" options="{'no_create': True, 'no_open': True}"/>
                                </group>
                            </group>
                        </page>
                        <page string="Inventory" name="inventory">
                            <group>
                                <field name="picking_type_id" options="{'no_create': True, 'no_open': True}" required="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Main Dashboard Action - Shows ONLY Karage POS Configurations -->
    <record id="action_karage_pos_dashboard" model="ir.actions.act_window">
        <field name="name">Karage POS Dashboard</field>
        <field name="res_model">pos.config</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('name', '=ilike', 'KARAGE%')]</field>
        <field name="context">{
            'default_name': 'KARAGE - ',
            'default_iface_tax_included': 'total',
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Karage POS Configuration Found
            </p>
            <p>
                Click the <strong>Create</strong> button to add a new Karage POS configuration.
            </p>
            <p class="text-muted">
                Note: All Karage POS names must start with "KARAGE" prefix.
            </p>
        </field>
    </record>

    <!-- Explicit view mappings for the dashboard action -->
    <record id="action_karage_pos_dashboard_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence">1</field>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="view_karage_pos_config_kanban"/>
        <field name="act_window_id" ref="action_karage_pos_dashboard"/>
    </record>

    <record id="action_karage_pos_dashboard_view_form" model="ir.actions.act_window.view">
        <field name="sequence">2</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_karage_pos_config_form"/>
        <field name="act_window_id" ref="action_karage_pos_dashboard"/>
    </record>

</odoo>
