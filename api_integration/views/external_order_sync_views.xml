<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- External Order Sync List View -->
        <record id="view_external_order_sync_tree" model="ir.ui.view">
            <field name="name">external.order.sync.list</field>
            <field name="model">external.order.sync</field>
            <field name="arch" type="xml">
                <list string="External Order Sync">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="pos_config_id"/>
                    <field name="last_sync_date"/>
                    <field name="last_sync_status" widget="badge" 
                           decoration-success="last_sync_status == 'success'"
                           decoration-warning="last_sync_status == 'no_orders'"
                           decoration-danger="last_sync_status == 'error'"/>
                    <field name="sync_interval"/>
                </list>
            </field>
        </record>

        <!-- External Order Sync Form View -->
        <record id="view_external_order_sync_form" model="ir.ui.view">
            <field name="name">external.order.sync.form</field>
            <field name="model">external.order.sync</field>
            <field name="arch" type="xml">
                <form string="External Order Synchronization">
                    <header>
                        <button name="sync_orders" string="Sync Now" type="object" class="btn-primary"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="pos_config_id" 
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       required="1"/>
                                <field name="auto_create_session"/>
                                <field name="sync_interval"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="external_api_url" 
                                       placeholder="https://external-system.com/api/orders"
                                       required="1"/>
                            </group>
                            <group>
                                <field name="external_api_key" password="True" required="1"
                                       help="API key for authenticating with external system"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Sync Status" name="sync_status">
                                <group>
                                    <group>
                                        <field name="last_sync_date" readonly="1"/>
                                        <field name="last_sync_status" readonly="1" widget="badge"
                                               decoration-success="last_sync_status == 'success'"
                                               decoration-warning="last_sync_status == 'no_orders'"
                                               decoration-danger="last_sync_status == 'error'"/>
                                    </group>
                                    <group>
                                        <field name="last_sync_message" readonly="1" nolabel="1" 
                                               widget="text" placeholder="No sync performed yet"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- External Order Sync Action -->
        <record id="action_external_order_sync" model="ir.actions.act_window">
            <field name="name">External Order Sync</field>
            <field name="res_model">external.order.sync</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first external order sync configuration
                </p>
                <p>
                    Configure automatic synchronization of orders from external systems.
                    Orders will be fetched and created in Odoo POS automatically.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_external_order_sync"
                  name="External Order Sync"
                  parent="base.menu_administration"
                  action="action_external_order_sync"
                  sequence="101"/>
    </data>
</odoo>

