<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Karage POS Security Groups -->
        <record id="group_karage_api_user" model="res.groups">
            <field name="name">Karage API User</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="comment">Users who can access Karage POS API endpoints</field>
        </record>

        <record id="group_karage_manager" model="res.groups">
            <field name="name">Karage Manager</field>
            <field name="category_id" ref="base.module_category_sales_point_of_sale"/>
            <field name="implied_ids" eval="[(4, ref('group_karage_api_user')), (4, ref('point_of_sale.group_pos_manager'))]"/>
            <field name="comment">Full access to Karage POS configuration and management</field>
        </record>
    </data>

    <data noupdate="1">
        <!-- Record Rules for Karage Request Logger -->
        <record id="rule_karage_request_logger_user" model="ir.rule">
            <field name="name">Karage Request Logger: User Access</field>
            <field name="model_id" ref="model_karage_request_logger"/>
            <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_karage_request_logger_manager" model="ir.rule">
            <field name="name">Karage Request Logger: Manager Access</field>
            <field name="model_id" ref="model_karage_request_logger"/>
            <field name="groups" eval="[(4, ref('group_karage_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for POS Orders from Karage API -->
        <record id="rule_pos_order_karage_location" model="ir.rule">
            <field name="name">POS Order: Karage Location Access</field>
            <field name="model_id" ref="point_of_sale.model_pos_order"/>
            <field name="groups" eval="[(4, ref('group_karage_api_user'))]"/>
            <field name="domain_force">['|', ('config_id.karage_location_id', '!=', False), ('session_id.config_id.karage_location_id', '!=', False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>