<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit POS Config Form to Add Karage Fields -->
        <record id="view_pos_config_form_karage" model="ir.ui.view">
            <field name="name">pos.config.form.karage</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group string="Karage Integration" name="karage_integration">
                        <field name="karage_location_id"/>
                        <field name="karage_auto_invoice"/>
                        <field name="karage_default_customer"/>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- POS Config Tree View for Karage -->
        <record id="view_pos_config_tree_karage" model="ir.ui.view">
            <field name="name">pos.config.tree.karage</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='last_session_closing_cash']" position="after">
                    <field name="karage_location_id" string="Karage Location" optional="hide"/>
                </xpath>
            </field>
        </record>

        <!-- Action for Karage POS Configurations -->
        <record id="action_karage_pos_config" model="ir.actions.act_window">
            <field name="name">Karage POS Configurations</field>
            <field name="res_model">pos.config</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('karage_location_id', '!=', False)]</field>
            <field name="context">{'default_karage_location_id': 0}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure Karage POS locations
                </p>
                <p>
                    Set up Point of Sale configurations for different Karage locations.
                    Each location should have its own POS configuration with a unique Karage Location ID.
                </p>
            </field>
        </record>
    </data>
</odoo>