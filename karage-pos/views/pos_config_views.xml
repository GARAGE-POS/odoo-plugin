<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Extend POS Config Form View to add Karage fields -->
        <record id="view_pos_config_form_karage" model="ir.ui.view">
            <field name="name">pos.config.form.karage</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='row mt16 o_settings_container'][1]" position="before">
                    <div class="row mt16 o_settings_container">
                        <div class="o_setting_box">
                            <div class="o_setting_left_pane">
                                <span class="o_form_label">Karage Integration</span>
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="content-group">
                                    <div class="row">
                                        <div class="col-12">
                                            <label for="karage_location_id" string="Karage Location ID"/>
                                            <field name="karage_location_id" placeholder="e.g. 404"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <field name="karage_auto_invoice"/>
                                            <label for="karage_auto_invoice" string="Auto Generate Invoices"/>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <label for="karage_default_customer" string="Default Customer"/>
                                            <field name="karage_default_customer"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Extend POS Config Tree View to add Karage fields -->
        <record id="view_pos_config_tree_karage" model="ir.ui.view">
            <field name="name">pos.config.tree.karage</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_config_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="karage_location_id" string="Karage Location" optional="hide"/>
                    <field name="karage_auto_invoice" string="Auto Invoice" optional="hide"/>
                </field>
            </field>
        </record>

        <!-- Action for Karage POS Configurations -->
        <record id="action_karage_pos_config" model="ir.actions.act_window">
            <field name="name">Karage POS Configurations</field>
            <field name="res_model">pos.config</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('karage_location_id', '!=', False)]</field>
            <field name="context">{'default_karage_location_id': 0}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure Karage POS locations
                </p>
                <p>
                    Set up Point of Sale configurations for different Karage locations.
                    Each location should have its own POS configuration with a unique Karage Location ID.
                </p>
            </field>
        </record>
    </data>
</odoo>