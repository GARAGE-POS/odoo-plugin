<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action for Karage POS Sessions -->
        <record id="action_karage_pos_session" model="ir.actions.act_window">
            <field name="name">Karage POS Sessions</field>
            <field name="res_model">pos.session</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('config_id.karage_location_id', '!=', False)]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Karage POS sessions found
                </p>
                <p>
                    Sessions for Karage POS locations will appear here.
                    Sessions are automatically managed when orders are received from Karage POS API.
                </p>
            </field>
        </record>

        <!-- Request Logger Form View -->
        <record id="view_karage_request_logger_form" model="ir.ui.view">
            <field name="name">karage.request.logger.form</field>
            <field name="model">karage.request.logger</field>
            <field name="arch" type="xml">
                <form string="API Request Log" create="0" edit="0">
                    <sheet>
                        <group>
                            <group>
                                <field name="url"/>
                                <field name="timestamp"/>
                                <field name="create_uid"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Headers" name="headers">
                                <field name="headers" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                            <page string="Body" name="body">
                                <field name="body" widget="ace" options="{'mode': 'json'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Request Logger Tree View -->
        <record id="view_karage_request_logger_tree" model="ir.ui.view">
            <field name="name">karage.request.logger.tree</field>
            <field name="model">karage.request.logger</field>
            <field name="arch" type="xml">
                <list string="API Request Logs" create="0" edit="0">
                    <field name="timestamp"/>
                    <field name="url"/>
                    <field name="create_uid"/>
                </list>
            </field>
        </record>

        <!-- Action for Request Logger -->
        <record id="action_karage_request_logger" model="ir.actions.act_window">
            <field name="name">API Request Logs</field>
            <field name="res_model">karage.request.logger</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No API requests logged yet
                </p>
                <p>
                    All incoming API requests to Karage endpoints will be logged here for audit and debugging purposes.
                </p>
            </field>
        </record>
    </data>
</odoo>