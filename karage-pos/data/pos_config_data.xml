<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Default POS Category for Karage Products -->
        <record id="product_category_karage" model="product.category">
            <field name="name">Karage POS</field>
        </record>

        <!-- Default Pricelist for Karage POS -->
        <record id="karage_pos_pricelist" model="product.pricelist">
            <field name="name">Karage POS Pricelist</field>
            <field name="currency_id" ref="base.USD"/>
        </record>

        <!-- Default Journal for Karage POS Sales -->
        <record id="karage_pos_sales_journal" model="account.journal">
            <field name="name">Karage POS Sales</field>
            <field name="code">KPOS</field>
            <field name="type">sale</field>
            <field name="refund_sequence">True</field>
            <field name="currency_id" ref="base.USD"/>
        </record>

        <!-- Default Stock Location for Karage POS -->
        <record id="stock_location_karage_main" model="stock.location">
            <field name="name">Karage Main Stock</field>
            <field name="usage">internal</field>
        </record>

        <!-- Default POS Configuration for Karage -->
        <record id="pos_config_karage_main" model="pos.config">
            <field name="name">Karage Main POS</field>
            <field name="journal_id" ref="karage_pos_sales_journal"/>
            <field name="pricelist_id" ref="karage_pos_pricelist"/>
            <field name="picking_type_id" model="stock.picking.type" search="[('code','=','outgoing')]"/>
            <field name="karage_location_id">0</field>
            <field name="payment_method_ids" eval="[(6, 0, [ref('payment_method_cash_karage'), ref('payment_method_card_karage')])]"/>
        </record>
    </data>
</odoo>