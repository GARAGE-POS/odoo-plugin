<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cash Journal for Karage POS -->
        <record id="karage_pos_cash_journal" model="account.journal">
            <field name="name">Karage POS Cash</field>
            <field name="code">KCASH</field>
            <field name="type">cash</field>
            <field name="currency_id" ref="base.USD"/>
        </record>

        <!-- Bank Journal for Karage POS -->
        <record id="karage_pos_bank_journal" model="account.journal">
            <field name="name">Karage POS Bank</field>
            <field name="code">KBANK</field>
            <field name="type">bank</field>
            <field name="currency_id" ref="base.USD"/>
        </record>

        <!-- Payment Methods for Karage POS -->
        <record id="payment_method_cash_karage" model="pos.payment.method">
            <field name="name">Cash</field>
            <field name="is_cash_count">True</field>
            <field name="journal_id" ref="karage_pos_cash_journal"/>
        </record>

        <record id="payment_method_card_karage" model="pos.payment.method">
            <field name="name">Card</field>
            <field name="is_cash_count">False</field>
            <field name="journal_id" ref="karage_pos_bank_journal"/>
        </record>

        <record id="payment_method_check_karage" model="pos.payment.method">
            <field name="name">Check</field>
            <field name="is_cash_count">False</field>
            <field name="journal_id" ref="karage_pos_bank_journal"/>
        </record>

    </data>
</odoo>